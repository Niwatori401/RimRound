		<jobString>Cooking crammed croissant.</jobString>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>MeatRaw</li>
						<li>AnimalProductRaw</li>
						<li>PlantFoodRaw</li>
					</categories>
				</filter>
				<count>2</count>
			</li>
