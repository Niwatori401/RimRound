<Defs>
  <!--Lavish Meal Derivatives-->
  <ThingDef Name="RR_LavishMealBase" ParentName="MealLavishBase" Abstract="True">
    <defName>RR_LavishMealBase</defName>
    <graphicData>
      <texPath>Things/Item/Meal/Fine</texPath>
      <graphicClass>Graphic_MealVariants</graphicClass>
    </graphicData>
    <comps>
      <li Class="CompProperties_Ingredients"/>
    </comps>
  </ThingDef>

  <ThingDef Name="RR_LavishMealBaseVEG" Abstract ="True" ParentName="MealLavishBase">
